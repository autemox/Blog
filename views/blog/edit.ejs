<% include ../partials/header %>

<div class="ui huge header">Edit Page</div>
    
<form action="/blog/<%=blog._id%>" method="POST">

    <div class=container>
        <div class=row>
            <div class="col-lg-3 col-med-2 col-sm-1 col-xs-0"></div>
            <div class="col-lg-6 col-med-8 col-sm-10 col-xs-12">
            
            
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="blog[title]" placeholder="title" value="<%=blog.title%>">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" name="blog[image]" placeholder="image url" value="<%=blog.image%>">
                </div>
                <div class="form-group">
                    <label>URL</label>
                    <input type="text" class="form-control" name="blog[url]" placeholder="url" value="<%=blog.url%>">
                </div>
                <div class="form-group">
                    <label>Blog Content</label>
                    <textarea class="form-control" rows=15 name="blog[body]"><%=blog.body%></textarea>
                </div>
            
                <center><input class="btn btn-primary center" type="submit" value="Edit"></center>
            </div>
            <div class="col-lg-3 col-med-2 col-sm-1 col-xs-0"></div>
        </div>
    </div>
</form>

<% include ../partials/footer %>